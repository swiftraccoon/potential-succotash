<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Login</title>
</head>
<body>
    <h2>Login</h2>
    <form id="loginForm">
        <input type="email" id="email" name="email" placeholder="Email" required><br />
        <button type="button" onclick="login()">Login</button>
    </form>

    <script src="https://unpkg.com/@simplewebauthn/browser/dist/bundle/index.umd.min.js"></script>
    <script>
        async function login() {
            try {
                const email = document.getElementById('email').value;

                // Step 1: Request authentication options
                const optionsResponse = await fetch('/auth/login/options', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ email })
                });
                const options = await optionsResponse.json();

                // Step 2: Start authentication process
                const authenticationResponse = await window.SimpleWebAuthnBrowser.startAuthentication(options);
                // Make sure to convert the credential ID back to the expected format if necessary
                authenticationResponse.rawId = Uint8Array.from(atob(authenticationResponse.rawId), c => c.charCodeAt(0));
                // Step 3: Send authentication response for verification
                const verificationResponse = await fetch('/auth/login/response', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ email, response: authenticationResponse })
                });

                const verificationResult = await verificationResponse.json();
                if (verificationResult.success) {
                    window.location.href = '/'; // Redirect to home page
                } else {
                    alert('Login failed');
                }
            } catch (error) {
                console.error(error);
                alert('Login failed: ' + error.message);
            }
        }
    </script>
</body>
</html>
